# Decipad Environment Configuration
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file containing real secrets

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application settings
NODE_ENV=development
APP_ROOT_PATH=/
DECI_PORT=3000

# Application URLs
DECI_APP_URL_BASE=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000/api/auth
REACT_APP_DECI_WS_URL=wss://localhost:3000

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS credentials (required for production)
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# S3 Configuration
DECI_S3_ENDPOINT=s3.eu-west-2.amazonaws.com
DECI_S3_ACCESS_KEY_ID=your_s3_access_key_id
DECI_S3_SECRET_ACCESS_KEY=your_s3_secret_access_key
DECI_S3_PADS_BUCKET=your_pads_bucket
DECI_S3_PAD_BACKUPS_BUCKET=your_pad_backups_bucket
DECI_S3_ATTACHMENTS_BUCKET=your_attachments_bucket
DECI_S3_EXTERNAL_DATA_SNAPSHOT_BUCKET=your_external_data_bucket

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_strong_jwt_secret_here
JWT_MAX_AGE=2592000

# OAuth Providers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key

# Google Vertex AI
GOOGLE_VERTEX_API_KEY=your_google_vertex_api_key

# Other AI Services
DEEPINFRA_API_KEY=your_deepinfra_api_key
REPLICATE_API_KEY=your_replicate_api_key

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google Sheets
DECI_GOOGLESHEETS_API_KEY=your_google_sheets_api_key
DECI_GOOGLESHEETS_CLIENT_ID=your_google_client_id
DECI_GOOGLESHEETS_CLIENT_SECRET=your_google_client_secret

# Notion
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret

# Discord
DISCORD_PUBLIC_KEY=your_discord_public_key
DISCORD_APP_ID=your_discord_app_id
DISCORD_FEEDBACK_CHANNEL_TOKEN=your_discord_bot_token
DISCORD_FEEDBACK_CHANNEL_ID=your_discord_channel_id

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe (use test keys for development)
STRIPE_API_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_EXTRA_CREDITS_PRODUCT_ID=prod_your_extra_credits_product_id
STRIPE_SUBSCRIPTIONS_PRODUCT_ID=prod_your_subscriptions_product_id
VITE_STRIPE_CUSTOMER_PORTAL_LINK=https://billing.stripe.com/p/login/your_customer_portal_link

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# Email configuration
DECI_FROM_EMAIL_ADDRESS=Decipad<info@yourdomain.com>
MAILERSEND_API_KEY=your_mailersend_api_key

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ENVIRONMENT=development

# Analytics
VITE_ANALYTICS_WRITE_KEY=your_analytics_write_key
VITE_POSTHOG_API_KEY=your_posthog_api_key
VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Intercom (customer support)
VITE_INTERCOM_APP_ID=your_intercom_app_id
VITE_INTERCOM_API_BASE=your_intercom_api_base
INTERCOM_SECRET_ID=your_intercom_secret_id

# =============================================================================
# CONTENT & MEDIA
# =============================================================================

# Media APIs
GIPHY_API_KEY=your_giphy_api_key
UNSPLASH_API_KEY=your_unsplash_api_key

# =============================================================================
# BUSINESS LOGIC
# =============================================================================

# Usage limits
DECI_MAX_CREDITS_FREE=50
DECI_MAX_CREDITS_PRO=500
DECI_MAX_QUERIES_FREE=10
DECI_MAX_QUERIES_PRO=500
DECI_MAX_COLLAB_READERS_FREE_PLAN=3
DECI_TOKENS_TO_CREDITS=2000

# File upload limits
DECI_MAX_ATTACHMENT_SIZE=10000000

# Expiration times (in seconds)
DECI_INVITE_EXPIRATION_SECONDS=604800
DECI_KEY_VALIDATION_EXPIRATION_SECONDS=2592000
DECI_DEFAULT_TOKEN_EXPIRATION_SECONDS=31536000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test configuration
DECI_TEST_USER_SECRET=your_test_user_secret
TEST_DATABASE=your_test_database_url

# Debug settings
DEBUG=@decipad/backend-notebook-assistant,@decipad/backend-code-assistant
DECI_VERBOSE=true

# =============================================================================
# DATA LAKE (Optional)
# =============================================================================

# Data Lake configuration
DATALAKE_GOOGLE_ROOT_SERVICE_CREDENTIALS=your_google_service_credentials
DATALAKE_WEBHOOK_SECRET=your_datalake_webhook_secret
DATALAKE_AIRBYTE_CLIENT_ID=your_airbyte_client_id
DATALAKE_AIRBYTE_CLIENT_SECRET=your_airbyte_client_secret
DATALAKE_AIRBYTE_URL=your_airbyte_url
DATALAKE_AIRBYTE_WORKSPACE_ID=your_airbyte_workspace_id

# =============================================================================
# NOTES
# =============================================================================

# 1. For local development, you can use placeholder values for most services
# 2. Some services like Stripe require real test keys even for development
# 3. Never use production keys in development
# 4. Keep this file updated when adding new environment variables
# 5. For production deployment, use a secure secret management system
