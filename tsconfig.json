{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",

    "composite": true,
    "incremental": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "target": "esnext",

    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["esnext"],

    "allowJs": false,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "noErrorTruncation": true,

    "paths": {
      "@decipad/docsync": ["libs/docsync/src/index.ts"],
      "@decipad/language": ["libs/language/src/index.ts"],
      "@decipad/ui": ["libs/ui/src/index.ts"],
      "@decipad/editor": ["libs/editor/src/index.tsx"],
      "@decipad/kafka-lite": ["libs/kafka-lite/src/index.ts"],
      "test-utils": ["libs/ui/src/lib/utils/test-utils.tsx"],
      "@decipad/queries": ["libs/queries/src/index.ts"],
      "@decipad/testutils": ["libs/testutils/src/index.ts"],
      "@decipad/interfaces": ["libs/interfaces/src/index.ts"],
      "@decipad/emails": ["libs/emails/src/index.ts"],
      "@decipad/eslint-config-decipad": ["libs/eslint-config-decipad/index.js"],
      "@decipad/meta": ["libs/meta/src/index.ts"],
      "@decipad/backendtypes": ["libs/backendtypes/src/index.ts"],
      "@decipad/config": ["libs/config/src/index.ts"],
      "@decipad/graphqlresource": ["libs/graphqlresource/src/index.ts"],
      "@decipad/graphqlserver": ["libs/graphqlserver/src/index.ts"],
      "@decipad/graphqlserver/schema": ["libs/graphqlserver/src/schema.ts"],
      "@decipad/graphqlserver/resolvers": [
        "libs/graphqlserver/src/resolvers.ts"
      ],
      "@decipad/services": ["libs/services/src/index.ts"],
      "@decipad/services/authentication": ["libs/services/src/authentication"],
      "@decipad/services/authorization": ["libs/services/src/authorization"],
      "@decipad/services/blobs/pads": ["libs/services/src/blobs/pads"],
      "@decipad/services/blobs/attachments": [
        "libs/services/src/blobs/attachments"
      ],
      "@decipad/services/email": ["libs/services/src/email"],
      "@decipad/services/monitor": ["libs/services/src/monitor"],
      "@decipad/services/permissions": ["libs/services/src/permissions"],
      "@decipad/services/pubsub": ["libs/services/src/pubsub"],
      "@decipad/services/pads": ["libs/services/src/pads"],
      "@decipad/services/tables": ["libs/services/src/tables"],
      "@decipad/services/users": ["libs/services/src/users"],
      "@decipad/services/workspaces": ["libs/services/src/workspaces"],
      "@decipad/services/invites": ["libs/services/src/invites"],
      "@decipad/services/externaldata": ["libs/services/src/externaldata"],
      "@decipad/utils": ["libs/utils/src/index.ts"],
      "@decipad/react-utils": ["libs/react-utils/src/index.ts"],
      "@decipad/externaldata": ["libs/externaldata/src/index.ts"],
      "@decipad/backend-test-sandbox": [
        "libs/backend-test-sandbox/src/index.ts"
      ],
      "@decipad/y-indexeddb": ["libs/y-indexeddb/src/index.ts"],
      "@decipad/y-websocket": ["libs/y-websocket/src/index.ts"],
      "@decipad/y-lambdawebsocket": ["libs/y-lambdawebsocket/src/index.ts"],
      "@decipad/y-dynamodb": ["libs/y-dynamodb/src/index.ts"],
      "@decipad/fnqueue": ["libs/fnqueue/src/index.ts"],
      "@decipad/fetch": ["libs/fetch/src/index.ts"],
      "@decipad/slate-yjs": ["libs/slate-yjs/src/index.ts"],
      "@decipad/sync-connection-lambdas": [
        "libs/sync-connection-lambdas/src/index.ts"
      ],
      "@decipad/dynamodb-lock": ["libs/dynamodb-lock/src/index.ts"]
    }
  },
  "files": [],
  "include": []
}
