{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",

    "composite": true,
    "incremental": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "target": "es2015",

    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["esnext"],

    "allowJs": false,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "noErrorTruncation": true,

    "paths": {
      "@decipad/runtime": ["libs/runtime/src/index.ts"],
      "@decipad/language": ["libs/language/src/index.ts"],
      "@decipad/ui": ["libs/ui/src/index.ts"],
      "@decipad/editor": ["libs/editor/src/index.tsx"],
      "@decipad/kafka-lite": ["libs/kafka-lite/src/index.ts"],
      "test-utils": ["libs/ui/src/lib/utils/test-utils.tsx"],
      "@decipad/queries": ["libs/queries/src/index.ts"]
    }
  },
  "files": [],
  "include": []
}
