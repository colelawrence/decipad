{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "settings": {
        "configPath": "./libs/lighthouse/src/lighthouse-config.js"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          { "minScore": 0.3, "aggregationMethod": "median-run" }
        ],
        "categories:accessibility": [
          "error",
          { "minScore": 0.7, "aggregationMethod": "pessimistic" }
        ],
        "categories:best-practices": [
          "error",
          { "minScore": 0.7, "aggregationMethod": "pessimistic" }
        ],
        "categories:seo": [
          "error",
          { "minScore": 0.9, "aggregationMethod": "pessimistic" }
        ]
      }
    }
  }
}
