{
  "name": "doc-verbalizer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/doc-verbalizer/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/doc-verbalizer/**/*.ts"],
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/doc-verbalizer"],
      "options": {
        "jestConfig": "libs/doc-verbalizer/jest.config.js"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b libs/doc-verbalizer"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/madge --circular src",
        "cwd": "libs/doc-verbalizer"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/esbuild --bundle --target=node18 --platform=node --format=cjs --outdir=build src/main.ts",
        "cwd": "libs/doc-verbalizer"
      }
    }
  },
  "tags": []
}
