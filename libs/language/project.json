{
  "name": "language",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/language/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/language/**/*.ts", "libs/language/**/*.tsx"],
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/libs/language"],
      "options": {
        "command": "npx vitest --run --config ../../vitest.base.config.ts",
        "cwd": "libs/language"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b libs/language"
      }
    },
    "bench": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vitest bench",
        "cwd": "libs/language"
      }
    }
  },
  "tags": []
}
