{
  "name": "backend-code-assistant",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/backend-code-assistant/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/backend-code-assistant/src/**/*.ts",
          "libs/backend-code-assistant/src/**/*.tsx"
        ],
        "maxWarnings": 0
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b libs/backend-code-assistant"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p build && ./scripts/collate-language-docs/collateLanguageDocs.js > build/languageDocs.md",
        "cwd": "libs/backend-code-assistant"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/depcruise --config ../../.dependency-cruiser.js src",
        "cwd": "libs/backend-code-assistant"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/libs/backend-code-assistant"],
      "options": {
        "command": "npx vitest --run --config ../../vitest.base.config.ts",
        "cwd": "libs/backend-code-assistant"
      }
    }
  },
  "tags": []
}
