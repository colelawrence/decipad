{
  "name": "backend-code-assistant",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/backend-code-assistant/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/backend-code-assistant/src/**/*.ts",
          "libs/backend-code-assistant/src/**/*.tsx"
        ],
        "maxWarnings": 0
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b libs/backend-code-assistant"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p build && ./scripts/collate-language-docs/collateLanguageDocs.js > build/languageDocs.md",
        "cwd": "libs/backend-code-assistant"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/madge --circular src",
        "cwd": "libs/backend-code-assistant"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/backend-code-assistant"],
      "options": {
        "jestConfig": "libs/backend-code-assistant/jest.config.js",
        "bail": true
      }
    },
    "test:local": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/backend-code-assistant"],
      "options": {
        "jestConfig": "libs/backend-code-assistant/jest.config.js",
        "bail": true,
        "testMatch": ["**/*.spec.disabled.ts"],
        "testPathPattern": ["libs/backend-code-assistant/src/tests"]
      }
    }
  },
  "tags": []
}
