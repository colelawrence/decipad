{
  "name": "format",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/format/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/format/**/*.ts", "libs/format/**/*.tsx"],
        "maxWarnings": 0
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b libs/format"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/madge --circular src",
        "cwd": "libs/format"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/libs/format"],
      "options": {
        "command": "npx vitest --run",
        "cwd": "libs/format"
      }
    }
  },
  "tags": []
}
