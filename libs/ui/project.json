{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/ui/**/*.{ts,tsx,js,jsx}"],
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage"],
      "options": {
        "command": "npx vitest --run",
        "cwd": "libs/ui"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b libs/ui"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/depcruise --config ../../.dependency-cruiser.js src",
        "cwd": "libs/ui"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/ui/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/ui",
        "configDir": "libs/ui/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/ui/.storybook --url=http://localhost:4400"
      }
    },
    "build-icons": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx @svgr/cli --jsx-runtime automatic --typescript --no-dimensions --memo --ext tsx --replace-attr-values '#000=currentColor' --svg-props role=img ./src/icons/user-icons/assets --template ./src/icons/template-svg.js --index-template ./src/icons/template-imports.js --out-dir ./src/icons/user-icons --out-dir ./src/icons/user-icons && eslint --fix ./src/icons/user-icons/*.tsx",
          "npx @svgr/cli --jsx-runtime automatic --typescript --no-dimensions --memo --ext tsx --replace-attr-values '#000=currentColor' --svg-props role=img ./src/icons/command-icons/themed/assets --template ./src/icons/template-svg.js --index-template ./src/icons/template-imports.js --out-dir ./src/icons/command-icons/themed && eslint --fix ./src/icons/command-icons/themed/*.tsx",
          "npx @svgr/cli --jsx-runtime automatic --typescript --no-dimensions --memo --ext tsx --replace-attr-values '#000=currentColor' --svg-props role=img ./src/icons/thumbnail-icons/themed/assets --template ./src/icons/template-svg.js --index-template ./src/icons/template-imports.js --out-dir ./src/icons/thumbnail-icons/themed && eslint --fix ./src/icons/thumbnail-icons/themed/*.tsx",
          "npx @svgr/cli --jsx-runtime automatic --typescript --no-dimensions --memo --ext tsx --replace-attr-values '#000=currentColor' --svg-props role=img ./src/icons/assets --template ./src/icons/template-svg.js --index-template ./src/icons/template-imports.js --out-dir ./src/icons && eslint --fix ./src/icons/*.tsx"
        ],
        "cwd": "libs/ui"
      }
    }
  },
  "tags": [],
  "namedInputs": {
    "projectSpecificFiles": ["{workspaceRoot}/storybook/**"]
  }
}
