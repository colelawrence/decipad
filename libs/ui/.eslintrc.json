{
  "extends": ["../../libs/eslint-config-decipad/react"],
  "plugins": ["decipad"],
  "ignorePatterns": [
    "!**/*",
    ".babelrc.js",
    "jest-browser.config.js",
    "jest.config.js"
  ],
  "rules": {
    "import/no-extraneous-dependencies": ["off"],
    "@typescript-eslint/consistent-type-imports": "off",
    "decipad/css-prop-named-variable": "error",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@decipad/ui",
            "message": "Do not import @decipad/ui from within the UI. Use relative paths"
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/test-utils/**"],
      "rules": {
        "import/no-extraneous-dependencies": ["off"]
      }
    },
    {
      "files": "src/shared/**/*.tsx",
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "../../../modules",
                "message": "Importing from `modules` is not allowed inside `shared` UI"
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["src/shared/atoms/**/*.tsx", "src/shared/atoms/**/*.ts"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "../../molecules",
                "message": "Importing from '../molecules' is not allowed in 'atoms' components."
              },
              {
                "name": "../../organisms",
                "message": "Importing from '../organisms' is not allowed in 'atoms' components."
              },
              {
                "name": "../../templates",
                "message": "Importing from '../templates' is not allowed in 'atoms' components."
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "src/shared/molecules/**/*.tsx",
        "src/shared/molecules/**/*.ts"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "../../organisms",
                "message": "Importing from '../organisms' is not allowed in 'atoms' components."
              },
              {
                "name": "../../templates",
                "message": "Importing from '../templates' is not allowed in 'atoms' components."
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "src/shared/organisms/**/*.tsx",
        "src/shared/organisms/**/*.ts"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "../../templates",
                "message": "Importing from '../templates' is not allowed in 'atoms' components."
              }
            ]
          }
        ]
      }
    }
  ]
}
