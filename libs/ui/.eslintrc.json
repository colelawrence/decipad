{
  "extends": ["../../libs/eslint-config-decipad/react"],
  "plugins": ["decipad"],
  "ignorePatterns": [
    "!**/*",
    ".babelrc.js",
    "jest-browser.config.js",
    "jest.config.js"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      // TODO re-enable when properly using Yarn workspaces
      "off"
    ],
    // "custom-emotion/css-prop-named-variable": "error",
    "decipad/css-prop-named-variable": "off"
  },
  "overrides": [
    {
      "files": ["src/test-utils/**"],
      "rules": {
        "import/no-extraneous-dependencies": [
          // TODO restore comment when properly using Yarn workspaces
          "off"
          // "error",
          // { "devDependencies": true }
        ]
      }
    }
  ]
}
