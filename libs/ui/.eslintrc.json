{
  "extends": ["../../libs/eslint-config-decipad/react"],
  "ignorePatterns": [
    "!**/*",
    ".babelrc.js",
    "jest-browser.config.js",
    "jest.config.js",
    "storybook/main.js"
  ],
  "rules": {},
  "overrides": [
    {
      "files": ["src/test-utils/**"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          { "devDependencies": true }
        ]
      }
    }, // TODO remove when everything is migrated out of src/lib
    {
      "files": ["src/lib/**"],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off"
      }
    }
  ]
}
