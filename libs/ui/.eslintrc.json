{
  "extends": ["../../libs/eslint-config-decipad/react"],
  "plugins": ["decipad"],
  "ignorePatterns": [
    "!**/*",
    ".babelrc.js",
    "jest-browser.config.js",
    "jest.config.js"
  ],
  "rules": {
    "import/no-extraneous-dependencies": ["off"],
    "decipad/css-prop-named-variable": "error",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@decipad/ui",
            "message": "Do not import @decipad/ui from within the UI. Use relative paths"
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/test-utils/**"],
      "rules": {
        "import/no-extraneous-dependencies": ["off"]
      }
    }
  ]
}
