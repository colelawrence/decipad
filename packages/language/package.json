{
  "name": "@decipad/language",
  "version": "0.0.1",
  "description": "Deci language",
  "main": "src/parser.ts",
  "scripts": {
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"./**/*.{ts,tsx}\" --fix",
    "typecheck": "tsc --project . --noEmit",
    "build": "npm run build:grammar",
    "build:grammar": "nearleyc src/grammar/deci-language-grammar.ne -o src/grammar/deci-language-grammar-generated.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decipad/language-parser.git"
  },
  "keywords": [
    "deci",
    "language",
    "parser"
  ],
  "author": "Pedro Teixeira <i@pgte.me>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/decipad/language-parser/issues"
  },
  "homepage": "https://github.com/decipad/language-parser#readme",
  "dependencies": {
    "@tensorflow/tfjs-core": "^3.2.0",
    "automerge": "^0.14.2",
    "immer": "^8.0.1",
    "lodash.debounce": "^4.0.8",
    "nanoid": "^3.1.20",
    "slate": "^0.59.0",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run typecheck && npm test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
