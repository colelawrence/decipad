{
  "name": "backend-tests",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend-tests/src",
  "projectType": "application",
  "prefix": "backend-tests",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/backend-tests/src/**/*.ts"],
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/apps/backend-tests"],
      "options": {
        "command": "npx vitest --run",
        "cwd": "apps/backend-tests"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b apps/backend-tests"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["backend"]
}
