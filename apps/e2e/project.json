{
  "name": "e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/e2e/tests",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./scripts/e2e.sh"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/e2e/**/*.{js,ts}"],
        "maxWarnings": 0
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b apps/e2e"
      }
    },
    "play": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/playwright test",
        "cwd": "apps/e2e"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["frontend", "backend", "config"]
}
