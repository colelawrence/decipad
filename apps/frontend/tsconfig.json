{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["jest", "vite-plugin-pwa/client"]
  },
  "include": ["src"],
  "exclude": ["vite.config.ts"],
  "references": [
    { "path": "./tsconfig.node.json" },
    {
      "path": "../../libs/docsync"
    },
    {
      "path": "../../libs/ui"
    },
    {
      "path": "../../libs/routing"
    },
    {
      "path": "../../libs/client-events"
    },
    {
      "path": "../../libs/toast"
    },
    {
      "path": "../../libs/notebook"
    },
    {
      "path": "../../libs/notebook-tabs"
    },
    {
      "path": "../../libs/support"
    },
    {
      "path": "../../libs/react-contexts"
    },
    {
      "path": "../../libs/react-utils"
    },
    {
      "path": "../../libs/graphql-client"
    },
    {
      "path": "../../libs/remote-computer"
    },
    {
      "path": "../../libs/editor-ai-assistant"
    },
    {
      "path": "../../libs/client-env"
    }
  ]
}
